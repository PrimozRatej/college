@model IEnumerable<dsr_vaja1.Models.Igra.Igra>

<div class="row">
    <div class="col-md-12">
        <h1 class="lead">@ViewBag.Title</h1>
        <h4 class="lead">@ViewBag.Message</h4>
        <hr class="hr" />
    </div>
</div>
@if (User.IsInRole("Admin"))
{
    <button type="button" class="navbar-btn btn reg" onclick="location.href='@Url.Action("Create", "Igras")'">Dodaj igro</button>
}



<div id="accordion">
    <h3>Igre</h3>
    <div>
        <table class="table table-hover ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cena)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.datum_prihoda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.proizvajalec)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.zaloga)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Zvrsti)
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cena)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.datum_prihoda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.proizvajalec)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.zaloga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zvrsti)
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                        @Html.ActionLink("Uredi|", "Edit", new { id = item.Id }) 
                        @Html.ActionLink("Podrobno|", "Details", new { id = item.Id }) 
                        @Html.ActionLink("Izbriši", "Delete", new { id = item.Id })
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>